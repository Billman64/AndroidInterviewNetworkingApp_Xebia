<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="32dp"
    android:paddingLeft="32dp"
    android:paddingEnd="32dp"
    android:paddingRight="32dp"
    android:background="#eee">

    <TextView
        android:id="@+id/id_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1"
        />

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/id_textview"
        app:layout_constraintTop_toBottomOf="@+id/id_textview"
        tools:text="some title"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/body_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/id_textview"
        app:layout_constraintTop_toBottomOf="@id/title_textview"
        tools:text = "some body of text"/>

    <TextView
        android:id="@+id/userid_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/body_textview"
        app:layout_constraintTop_toBottomOf="@id/body_textview"
        tools:text="72"/>

</androidx.constraintlayout.widget.ConstraintLayout>